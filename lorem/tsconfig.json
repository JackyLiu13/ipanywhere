{
    "compilerOptions": {
        "target": "es5", // or "es6" depending on your needs
        "module": "commonjs", // or "esnext" if you're using ES modules
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "jsx": "react" // Added to enable JSX support
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}